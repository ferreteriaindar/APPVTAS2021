<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background"
    tools:context=".fragmentos.clientes.cxc.cxcFragment">

    <!-- TODO: Update blank fragment layout -->




    <EditText
        android:id="@+id/txtLayoutBuscarCXC"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/cardview_light_background"
        android:drawableLeft="@drawable/ic_search"
        android:ems="10"

        android:hint="Buscar.."
        android:inputType="textPersonName" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCXC"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_above="@+id/textView4"
        android:layout_below="@+id/txtLayoutBuscarCXC"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="3dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="5dp"
        android:text="Importe Total:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLayoutImportetotalCxc"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvCXC"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="13dp"
        android:layout_toEndOf="@+id/textView4"
        android:text="$"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCXCcobrar"
        android:layout_width="110dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@+id/txtLayoutBuscarCXC"
        android:text="Cobrar" />

</RelativeLayout>