<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
>


    <EditText
        android:id="@+id/txtLoginUSer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageNavPerfil"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="11dp"

        android:drawableLeft="@drawable/ic_usuario"

        android:ems="10"
        android:hint="zona"
        android:inputType="textCapCharacters" />

    <EditText
        android:id="@+id/txtLoginPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="195dp"
        android:drawableLeft="@drawable/ic_lock"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:password="true"
        android:textColorLink="@android:color/holo_orange_dark" />

    <Button
        android:id="@+id/btnLogin"
        style="@style/TextAppearance.AppCompat.Button"
        android:layout_width="176dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtLoginPass"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="213dp"
        android:onClick="onLogin"
        android:text="@string/btnIniciarSesion" />

    <ImageView
        android:id="@+id/imageNavPerfil"
        android:layout_width="263dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/logoindarapp" />

    <ImageView
        android:id="@+id/btnInicioSettings"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        app:srcCompat="@drawable/ic_settings" />

    <Button
        android:id="@+id/btnUpdateAPP"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="120dp"
        android:background="@color/ColorAzulHeader"
        android:onClick="actualizaAPP"
        android:text="@string/update" />

    <TextView
        android:id="@+id/txtMainVersion"
        android:layout_width="59dp"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:textSize="8sp" />

</RelativeLayout>