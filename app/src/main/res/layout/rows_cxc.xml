                app:layout_constraintTop_toBottomOf="@+id/fondoformapago" />

            <TextView
                android:id="@+id/txtlayoutemisioncxc"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="12dp"
                android:inputType="date"
                android:text="TextView"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/txtlayoutvencimientocxc"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="12dp"
                android:inputType="date"
                android:text="TextView"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <ImageView
                android:id="@+id/imgLayoutcxc"
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtlayoutreferencaiacxc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.933"
                app:layout_constraintStart_toEndOf="@+id/txtlayoutMovcxc"
                app:layout_constraintTop_toTopOf="parent"
