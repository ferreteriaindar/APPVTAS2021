                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/txtlayoutemisioncxc"
                app:layout_constraintTop_toBottomOf="@+id/fondoformapago" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="32dp"
                android:layout_height="17dp"
